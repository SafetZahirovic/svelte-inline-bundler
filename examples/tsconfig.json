{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "typeRoots": ["types", "node_modules/@types"],
    "declaration": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "**/*.d.ts",
    "src/compiler/generators/wrappers/*.js"
  ]
}
