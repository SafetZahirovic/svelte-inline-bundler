{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./public",
    "typeRoots": ["types", "node_modules/@types"],
    "allowJs": true
  },
  "include": ["src/**/*.ts", "**/*.d.ts"]
}
